<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"  
    xmlns:bm="http://schemas.android.com/apk/res/fr.babymonitor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/padding_large"
    android:orientation="vertical"
    android:gravity="center_horizontal" >
    
    <fr.babymonitor.ui.SVGImageView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:scaleType="center"
        bm:svgDrawableTop="@raw/baby"
        android:layout_marginBottom="@dimen/padding_large" />
    
    <fr.babymonitor.ui.SVGTextView
        android:drawablePadding="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/btn_selector"
        android:text="@string/indicator_battery_low"
        android:id="@+id/indicator_battery_low"
        bm:svgDrawableLeft="@raw/battery"
        android:visibility="gone" />
    
    <fr.babymonitor.ui.SVGTextView
        android:drawablePadding="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/btn_selector"
        android:text="@string/indicator_no_alert_type"
        android:id="@+id/indicator_no_alert_type"
        bm:svgDrawableLeft="@raw/alert"
        android:visibility="gone" />
    
    <fr.babymonitor.ui.SVGTextView
        android:drawablePadding="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/btn_selector"
        android:text="@string/indicator_connectivity_low"
        android:id="@+id/indicator_connectivity_low"
        bm:svgDrawableLeft="@raw/connectivity"
        android:visibility="gone" />
    
    <fr.babymonitor.ui.SVGTextView
        android:drawablePadding="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/btn_selector"
        android:text="@string/indicator_interval_between_alarms"
        android:id="@+id/indicator_interval_between_alarms"
        bm:svgDrawableLeft="@raw/countdown"
        android:visibility="gone" />
    
    <fr.babymonitor.ui.SVGTextView
        android:drawablePadding="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/btn_selector"
        android:text="@string/indicator_charger_disconnected"
        android:id="@+id/indicator_charger_disconnected"
        bm:svgDrawableLeft="@raw/plug"
        android:visibility="gone" />
    
    <fr.babymonitor.ui.SVGTextView
        android:drawablePadding="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="@color/btn_selector"
        android:text="@string/indicator_no_contact_number"
        android:id="@+id/indicator_no_contact_number"
        bm:svgDrawableLeft="@raw/call" />
    
    <RelativeLayout 
        android:id="@+id/volume_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_large"
        android:layout_marginTop="@dimen/padding_large"
        android:layout_marginLeft="@dimen/padding_small"
        android:layout_marginRight="@dimen/padding_small" >
        
        <ImageView 
            android:id="@+id/sound_min"
            android:layout_width="18dip"
            android:layout_height="18dip"
            android:src="@drawable/sound_min"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>
        
        <ImageView 
            android:id="@+id/sound_max"
            android:layout_width="18dip"
            android:layout_height="18dip"
            android:src="@drawable/sound_max"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    
        <ProgressBar
            style="@style/ProgressBar"
            android:progressDrawable="@drawable/progress" 
            android:id="@+id/progress"
            android:indeterminate="false"
            android:progress="50"
            android:max="100"
            android:layout_toLeftOf="@id/sound_max"
            android:layout_toRightOf="@id/sound_min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dip"
            android:layout_marginLeft="10dip"/>
    
        <SeekBar
            style="@style/SeekBar"
            android:id="@+id/threshold"
            android:progressDrawable="@drawable/progress"
            android:layout_toLeftOf="@id/sound_max"
            android:layout_toRightOf="@id/sound_min"
            android:progress="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dip"
            android:layout_marginLeft="10dip"
            android:max="100" />
        
    </RelativeLayout>
    
    <LinearLayout 
        android:id="@+id/buttons"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_small"
        android:layout_marginRight="@dimen/padding_small"
        android:layout_marginBottom="@dimen/padding_small" >
    
        <LinearLayout 
            android:id="@+id/contact_bar"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <fr.babymonitor.ui.SVGToggle
                android:id="@+id/call"
                android:drawablePadding="5dip"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textOn="@string/btn_call"
                android:textOff="@string/btn_call"
                bm:svgDrawableTop="@raw/call"/>
            
            <View
                android:layout_width="@dimen/padding_small"
                android:layout_height="match_parent"
                android:background="@color/transparent" />
            
            <fr.babymonitor.ui.SVGToggle
                android:id="@+id/sms"
                android:drawablePadding="5dip"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textOn="@string/btn_sms"
                android:textOff="@string/btn_sms"
                bm:svgDrawableTop="@raw/sms" />
            
        </LinearLayout>
            
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_small"
            android:background="@color/transparent" />
    
        <fr.babymonitor.ui.SVGToggle
            android:id="@+id/start"
            android:drawablePadding="5dip"
            bm:svgDrawableTop="@raw/mic_on"
            android:textOn="@string/btn_on"
            android:textOff="@string/btn_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
    </LinearLayout>
    
</LinearLayout>