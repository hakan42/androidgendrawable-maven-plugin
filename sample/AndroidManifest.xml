<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="3" android:versionName="1.0.1" package="fr.babymonitor">
    
    <compatible-screens>
        <screen android:screenSize="normal"/>
        <screen android:screenSize="small"/>
    </compatible-screens>

    <uses-sdk android:maxSdkVersion="17" android:minSdkVersion="9" android:targetSdkVersion="17"/> <!-- don't change before testing -->
    
   	<!-- Cloud Messaging 
    <permission android:name="fr.babymonitor.permission.C2D_MESSAGE" android:protectionLevel="signature" />
	<uses-permission android:name="fr.babymonitor.permission.C2D_MESSAGE" />
	<uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
	<uses-permission android:name="android.permission.INTERNET" /> 
	<uses-permission android:name="android.permission.GET_ACCOUNTS" />
	-->
    
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>			<!-- Ecoute Audio -->
    <uses-permission android:name="android.permission.CALL_PHONE"/>			    <!-- Appels telephoniques -->
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>			<!-- Reception de SMS -->
    <uses-permission android:name="android.permission.SEND_SMS"/>				<!-- Envoi de SMS -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>				<!-- Gestion de l'affichage -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>	<!-- Ecoute de la connectivite -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>		<!-- Activer ou desactiver le WIFI -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>		<!-- Acces a l'etat du WIFI -->
    <uses-permission android:name="android.permission.INTERNET"/>				<!-- Acces Internet -->
    <uses-permission android:name="android.permission.READ_CONTACTS"/>			<!-- Choix d'un numero de telephone -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>       <!-- Utilisation d'un Phone State Listener -->
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS"/> <!-- Ecoute des appels sortant -->
        
    <application android:allowBackup="true" android:allowClearUserData="true" android:debuggable="true" android:icon="@drawable/babymonitor" android:label="@string/babymonitor" android:theme="@style/BabyMonitor" android:logo="@drawable/actionbar_icon">
        
        <activity android:label="@string/babymonitor" android:launchMode="singleTask" android:name=".BabyMonitor" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        
        <activity android:label="@string/settings" android:name=".BabyMonitorSettings" android:parentActivityName="fr.babymonitor.BabyMonitor">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="fr.babymonitor.BabyMonitor"/>
        </activity>
        
        <service android:name=".sound.SoundMeterService"/>
        
        <!-- Cloud Messaging 
        <service android:name="messaging.GCMIntentService" />
